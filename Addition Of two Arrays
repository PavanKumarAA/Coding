#include <stdio.h>

int main()
{
   int a[100][100],b[100][100],c[100][100],r,co;
   printf("enter the number of row and column\n");
   scanf("%d%d",&r,&co);
    printf("Enter the elements of 1st\n");
   for(int i=0;i<r;i++)
   {
       for(int j=0;j<co;j++)
       {
         
           scanf("%d",&a[i][j]);
           
       }
   }
   
   printf("Enter the elements of 2nd\n");
   for(int i=0;i<r;i++)
   {
       for(int j=0;j<co;j++)
       {
           
           scanf("%d",&b[i][j]);
       }
   }
   
   for(int i=0;i<r;i++)
   {
       for(int j=0;j<co;j++)
       {
          c[i][j]=a[i][j]+b[i][j];
       }
   }   
   
   printf("the elements\n");
   for(int i=0;i<r;i++)
   {
       for(int j=0;j<co;j++)
       {
         printf("%d\n",c[i][j]);
       }
   }   
}
